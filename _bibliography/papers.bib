	year = {2021},
	note = {Publisher: Frontiers},
	keywords = {Automation, Cuprizone, deep learning, In vivo cell tracking, injury/repair, oligodendrocyte, two photon imaging},
	file = {Full Text:C\:\\Users\\tiger\\Zotero\\storage\\KMK2MIGY\\Xu et al. - 2021 - Automated in vivo Tracking of Cortical Oligodendro.pdf:application/pdf},
