	month = jun,
	year = {2023},
	note = {Publisher: Nature Publishing Group},
	keywords = {Image processing, Machine learning, Mouse, Optical imaging, Synaptic plasticity},
	pages = {935--944},
	file = {Full Text PDF:C\:\\Users\\tiger\\Zotero\\storage\\J8DIMEV7\\Xu et al. - 2023 - Cross-modality supervised image restoration enable.pdf:application/pdf},
}

